<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    Chatty <i class="fas fa-comments"></i>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <div class='navbar-items'> 
        <div>
          <% if current_user %>
            <li class="nav-item active">
              <%= link_to 'new chatroom', new_chatroom_path, class: "nav-link" %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to 'chatrooms', chatrooms_path, class: "nav-link"  %>
          </li>
        </div>
        <div>
          <li class="nav-item dropdown">
           <%= image_tag "https://avatarfiles.alphacoders.com/865/86573.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown",  data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <% if current_user %>
                <%= link_to "Log Out", logout_path, method: "delete", class: "dropdown-item" %>
              <% else %>
                <%= link_to "Sign Up", signup_path, class: "dropdown-item" %>
                <%= link_to "Log In", login_path, class: "dropdown-item" %>
              <% end %>
            </div>
          </li>
        </div>
      </div>
    </ul>
  </div>
</div>
